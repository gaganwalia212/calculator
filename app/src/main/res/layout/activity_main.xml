<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="20sp"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1.5"
        android:textColor="@color/white"
        android:text=""
        android:textAlignment="viewEnd"
        android:padding="10sp"
        android:textSize="40sp"
        android:scrollHorizontally="true"
        android:id="@+id/input"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1.5"
        android:textColor="@color/white"
        android:text=""
        android:textAlignment="viewEnd"
        android:padding="10sp"
        android:textSize="80sp"
        android:id="@+id/output"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text="AC"
            android:textColor="@color/black"
            android:background="@drawable/circle_light_gray"
            android:textSize="35sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:padding="3sp"
            android:id="@+id/ac"
            />

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/black"
            android:background="@drawable/circle_light_gray"
            android:textSize="35sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:padding="3sp"
            android:id="@+id/zero"
            android:onClick="numberClick"
            />

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text="del"
            android:textColor="@color/black"
            android:background="@drawable/circle_light_gray"
            android:textSize="35sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:padding="3sp"
            android:id="@+id/del"
            />

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text="รท"
            android:textColor="@color/white"
            android:background="@drawable/circle_orange"
            android:textSize="35sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:id="@+id/divide"
            android:onClick="operationClick"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/white"
            android:background="@drawable/circle_dark_gray"
            android:textSize="35sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:padding="3sp"
            android:id="@+id/one"
            android:onClick="numberClick"

            />

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text="2"
            android:textColor="@color/white"
            android:background="@drawable/circle_dark_gray"
            android:textSize="35sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:padding="3sp"
            android:id="@+id/two"
            android:onClick="numberClick"

            />

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text="3"
            android:textColor="@color/white"
            android:background="@drawable/circle_dark_gray"
            android:textSize="35sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:padding="3sp"
            android:id="@+id/three"
            android:onClick="numberClick"

            />

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text="x"
            android:textColor="@color/white"
            android:background="@drawable/circle_orange"
            android:textSize="35sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:id="@+id/multiply"
            android:onClick="operationClick"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text="4"
            android:textColor="@color/white"
            android:background="@drawable/circle_dark_gray"
            android:textSize="35sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:padding="3sp"
            android:id="@+id/four"
            android:onClick="numberClick"

            />

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text="5"
            android:textColor="@color/white"
            android:background="@drawable/circle_dark_gray"
            android:textSize="35sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:padding="3sp"
            android:id="@+id/five"
            android:onClick="numberClick"

            />

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text="6"
            android:textColor="@color/white"
            android:background="@drawable/circle_dark_gray"
            android:textSize="35sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:padding="3sp"
            android:id="@+id/six"
            android:onClick="numberClick"

            />

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text="-"
            android:textColor="@color/white"
            android:background="@drawable/circle_orange"
            android:textSize="35sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:id="@+id/subtract"
            android:onClick="operationClick"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text="7"
            android:textColor="@color/white"
            android:background="@drawable/circle_dark_gray"
            android:textSize="35sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:padding="3sp"
            android:id="@+id/seven"
            android:onClick="numberClick"

            />

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text="8"
            android:textColor="@color/white"
            android:background="@drawable/circle_dark_gray"
            android:textSize="35sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:padding="3sp"
            android:id="@+id/eight"
            android:onClick="numberClick"

            />

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text="9"
            android:textColor="@color/white"
            android:background="@drawable/circle_dark_gray"
            android:textSize="35sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:padding="3sp"
            android:id="@+id/nine"
            android:onClick="numberClick"

            />

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text="+"
            android:textColor="@color/white"
            android:background="@drawable/circle_orange"
            android:textSize="35sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:id="@+id/add"
            android:onClick="operationClick"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/open"
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="@drawable/circle_dark_gray"
            android:padding="3sp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"

            />

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/white"
            android:background="@drawable/circle_dark_gray"
            android:textSize="40sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:padding="3sp"
            android:id="@+id/closed"

            />

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"

            android:textColor="@color/white"
            android:background="@drawable/circle_dark_gray"
            android:textSize="40sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:padding="3sp"

            />

        <TextView
            android:layout_width="0sp"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text="="
            android:textColor="@color/white"
            android:background="@drawable/circle_orange"
            android:textSize="35sp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:id="@+id/calculate"
            />
    </LinearLayout>

</LinearLayout>